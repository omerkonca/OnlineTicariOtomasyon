@using MvcOnlineTicaretOtomasyonu.Models.siniflar
@model List<SatisHaraket>

@{
    ViewBag.Title = "MüsteriSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<br />
<ol class="breadcrumb mb-4"><li class="breadcrumb-item active">Cari Adı:@ViewBag.cari</li></ol>
<table class="table table-condensed">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Satisid</td>
            <td>@x.Urun.UrunAd</td>
            <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</td>
            <td>@x.Fiyat</td>
            <td>@x.Adet</td>
            <td>@x.ToplamTutar</td>
            <td>@x.Tarih</td>
            <td><a href="#" class="btn btn-default" style="background-color:dodgerblue">Yazdır</a></td>
        </tr>
    }

</table>


